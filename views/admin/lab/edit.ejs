<%- include('../../partials/header') %> <%- include('../../partials/sidebar') %>

<!-- Main Wrapper-->
<main class="main-wrapper">
  <div class="container-fluid">
    <div class="inner-contents">
      <div
        class="page-header d-flex align-items-center justify-content-between mr-bottom-30"
      >
        <div class="left-part">
          <h2 class="text-dark">Form Labolatorium</h2>
        </div>
        <div class="right-part">
          <form
            class="search-form w-auto"
            action="https://wpthemebooster.com/demo/themeforest/html/kleon/search.php"
          >
            <input
              type="text"
              name="search"
              class="bg-white form-control"
              placeholder="Search"
            />
            <button type="submit" class="btn">
              <img src="assets/img/svg/search.svg" alt="" />
            </button>
          </form>
        </div>
      </div>

      <!-- Form Wizard -->
      <div class="card border-0 p-5">
        <div class="card-header bg-transparent border-0 p-0">
          <h6 class="mb-0">Basic Form Wizard</h6>
        </div>

        <div class="card-body p-0 pt-4">
          <form method="post" action="/lab/store" enctype="multipart/form-data">
            <!-- First Wizard -->
            <div class="form-wizard-block active">
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <div class="input-group">
                      <span
                        class="badge d-flex align-items-center text-dark rounded-0 rounded-start py-2 px-3 border border-light-200 fs-16"
                        ><i class="bi bi-person"></i
                      ></span>
                      <input
                        type="text"
                        class="form-control"
                        name="nama_lab"
                        id="nama_lab"
                        value=""
                        placeholder="Nama Lab"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <div class="input-group">
                      <span
                        class="badge d-flex align-items-center text-dark rounded-0 rounded-start py-2 px-3 border border-light-200 fs-16"
                        ><i class="bi bi-person"></i
                      ></span>
                      <input
                        type="text"
                        class="form-control"
                        name="lokasi"
                        id="lokasi"
                        value=""
                        placeholder="Lokasi"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <div class="input-group">
                      <span
                        class="badge d-flex align-items-center text-dark rounded-0 rounded-start py-2 px-3 border border-light-200 fs-16"
                        ><i class="bi bi-person"></i
                      ></span>

                      <select
                        class="form-control"
                        id="tersedia"
                        name="tersedia"
                        required
                      >
                        <option disabled>Choose...</option>
                        <option value="1">Tersedia</option>
                        <option value="0">Tidak Tersedia</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <div class="input-group">
                      <span
                        class="badge d-flex align-items-center text-dark rounded-0 rounded-start py-2 px-3 border border-light-200 fs-16"
                        ><i class="bi bi-person"></i
                      ></span>
                      <input
                        type="file"
                        class="form-control"
                        name="gambar"
                        id="gambar"
                        value=""
                        placeholder="gambar"
                        required
                      />
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group mb-0">
                  <button
                    type="submit"
                    id="wizard-next"
                    class="btn btn-primary"
                  >
                    Simpan
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>
